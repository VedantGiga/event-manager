{
  "name": "event-management-system",
  "version": "1.0.0",
  "description": "Production-ready Event Management System with React frontend and Node.js backend",
  "main": "server/index.js",
  "scripts": {
    "setup": "npm install && cd client && npm install && cd ..",
    "clean-db": "node server/scripts/cleanDatabase.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "server:start": "node server/index.js",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "install:all": "npm install && cd client && npm install",
    "build": "npm run client:build",
    "start": "npm run server:start"
  },
  "keywords": [
    "event-management",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "Event Management Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "winston": "^3.11.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss": "^1.0.14",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}